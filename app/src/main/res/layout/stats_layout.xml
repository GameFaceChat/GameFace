<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_medium"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#33000000"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/display_friends"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="0dp"
        android:text="@string/_0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        tools:text="56" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small_text_white"
        android:textAlignment="center"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="@string/stats_friends_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/display_packs"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/_0"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        tools:text="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small_text_white"
        android:textAlignment="center"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="@string/stats_packs_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/games_won"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="0dp"
        android:text="@string/_0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        tools:text="100" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small_text_white"
        android:textAlignment="center"
        android:layout_row="2"
        android:layout_marginBottom="@dimen/layout_margin_small"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="@string/stats_games_won_title"/>
</GridLayout>